<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <!-- Menggunakan gambar sebagai background -->
        <bitmap
            android:src="@drawable/background_cart"
            android:gravity="fill" />
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Warna background -->
            <corners android:radius="16dp"/> <!-- Sudut (radius) sudut bulat -->
            <stroke
                android:width="1dp"
                android:color="#CCCCCC"/> <!-- Garis tepi (stroke) -->
        </shape>
    </item>

    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF"/> <!-- Warna shadow, transparent -->
            <corners android:radius="16dp"/> <!-- Sama dengan sudut background -->
            <stroke android:width="1dp" android:color="#CCCCCC"/> <!-- Garis tepi (stroke) -->
            <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="2dp"/> <!-- Mengatur padding -->
        </shape>
    </item>
</layer-list>
