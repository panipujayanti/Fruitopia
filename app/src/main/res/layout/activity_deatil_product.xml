<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailproduct.DeatilProductActivity"
    android:background="@drawable/background_detail_product">

  <LinearLayout
      android:id="@+id/ll_header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:orientation="horizontal"
      android:layout_marginTop="8dp">

      <ImageView
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:src="@drawable/ic_back"
          android:layout_margin="12dp"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="@string/text_detail_product"
          android:layout_margin="12dp"
          android:fontFamily="@font/open_sans_bold"
          android:textSize="18sp"/>

  </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ll_header"
        android:layout_marginVertical="40dp">

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_avocado" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/iv_product"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/tv_price_product_calculate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Rp. 18.000"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="16sp"
                android:layout_marginHorizontal="18dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_count_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:elevation="8dp"
                app:cardCornerRadius="16dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="@color/light_brown">
                <LinearLayout
                    android:id="@+id/ll_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_button_rounded_border_transparent"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/iv_minus"
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_minus"/>

                    <TextView
                        android:id="@+id/tv_product_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:text="@string/text_number_count"
                        android:fontFamily="@font/open_sans"
                        android:textSize="20sp" />
                    <ImageView
                        android:id="@+id/iv_plus"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_plus"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cl_product"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Avocado"
            android:fontFamily="@font/open_sans_bold"
            android:textSize="18sp"
            android:layout_marginHorizontal="18dp"/>

        <TextView
            android:id="@+id/tv_desk_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_product"
            tools:text="Nikmati kelezatan alpukat segar yang dipetik langsung dari kebun petani terbaik. Alpukat kami dipilih dengan cermat untuk memastikan kualitas terbaik, kelembutan, dan rasa yang kaya. Setiap buah dipetik pada saat matang sempurna, memberikan Anda cita rasa yang alami dan tekstur yang creamy. Cocok untuk dinikmati langsung, dijadikan jus, atau diolah menjadi berbagai hidangan sehat. "
            android:layout_marginHorizontal="18dp"
            android:fontFamily="@font/open_sans"
            android:textSize="16sp"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/button_add_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/light_brown"
            app:layout_constraintTop_toBottomOf="@+id/tv_desk_product"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:text="ADD TO CART"
            android:paddingVertical="12dp"
            android:paddingHorizontal="40dp"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/black"
            android:textSize="16sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>